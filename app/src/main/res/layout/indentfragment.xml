<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/indentfragment_shape"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">

        <LinearLayout
            android:id="@+id/indent_sunindent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/quanbudd_ddf" />

            <TextView
                android:id="@+id/text_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="全部订单"
                android:gravity="center"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/indent_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/daifuk_ddf" />

            <TextView
                android:id="@+id/text_price"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="待付款"
                android:gravity="center"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/indent_waitcargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/daishouh_ddf" />

            <TextView
                android:id="@+id/text_goods"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="待收货"
                android:gravity="center"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/indent_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/daipingj_ddf" />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="待评价"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/indent_sucess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/yiwanc_ddf" />

            <TextView
                android:id="@+id/text_sucess"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="已完成"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>

        <!--<com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/indent_recycler"
            android:layout_width="@dimen/dp_312"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            >

        </com.jcodecraeer.xrecyclerview.XRecyclerView>-->
<android.support.v7.widget.RecyclerView
    android:id="@+id/indent_recycler"
    android:layout_width="@dimen/dp_312"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_30"
    android:layout_gravity="center_horizontal"></android.support.v7.widget.RecyclerView>
</LinearLayout>