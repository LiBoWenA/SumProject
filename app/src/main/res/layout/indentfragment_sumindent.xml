<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/indentfragment_shape"
        android:paddingBottom="@dimen/dp_10"
        >
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text1"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号"
            />
        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/indent_sunindent_creat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text1"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="12345"
            />
        <TextView
            android:textSize="@dimen/sp_12"
            android:id="@+id/indent_sunindent_creat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2019-01-10"
            />
    </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/indent_sunindent_rv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textg"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/sumindet_num"
            android:layout_height="wrap_content"
            android:text="共"
            />
        <TextView
            android:id="@+id/sumindet_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/textj"
            android:text="222"
            />
        <TextView
            android:id="@+id/textj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/sumindet_price"
            android:text="件商品，需付款"
            />
        <TextView
            android:id="@+id/sumindet_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/texty"
            android:textColor="#f00"
            android:text="222"
            />
        <TextView
            android:id="@+id/texty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ddd"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="取消订单"
            />
        <Button
            android:id="@+id/shop_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#ff5757"
            android:textColor="#fff"
            android:text="去支付"
            />
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>