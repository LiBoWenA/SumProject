<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/login_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/phone"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignLeft="@id/view1"
        android:layout_marginTop="@dimen/dp_160"
        android:background="@mipmap/login_icon_phone"
        />
    <EditText
        android:id="@+id/main_phone"
        android:layout_toRightOf="@id/phone"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_20"
        android:background="@null"
        android:hint="手机号"
        android:inputType="number"
        android:maxLength="11"
        android:paddingLeft="@dimen/dp_20"
        android:textSize="@dimen/dp_18"
        android:textColorHint="#fff"
        android:textColor="#fff"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_2"
        android:layout_below="@id/main_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="#fff"
        />
    <ImageView
        android:layout_below="@+id/view1"
        android:id="@+id/sign_lock"
        android:layout_width="@dimen/dp_20"
        android:layout_alignLeft="@id/view1"
        android:layout_height="@dimen/dp_20"
        android:background="@mipmap/login_icon_lock"
        />
    <EditText
        android:id="@+id/main_pwd"
        android:layout_toRightOf="@id/sign_lock"
        android:layout_below="@id/view1"
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_20"
        android:background="@null"
        android:paddingLeft="@dimen/dp_20"
        android:inputType="numberPassword"
        android:hint="登录密码"
        android:textSize="@dimen/dp_18"
        android:password="true"
        android:textColorHint="#fff"
        android:textColor="#fff"
        />
    <ImageView
        android:id="@+id/show_hide_eye"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_20"
        android:background="@mipmap/login_icon_eye"
        android:layout_toRightOf="@id/main_pwd"
        android:layout_alignBottom="@id/main_pwd"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main_pwd"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="#fff"
        />
    <CheckBox
        android:id="@+id/check_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:layout_below="@id/view2"
        android:layout_alignLeft="@id/view2"
        android:textSize="@dimen/dp_14"
        android:textColor="#fff"
        android:buttonTint="#fff"
        />

    <TextView
        android:id="@+id/main_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/view2"
        android:layout_alignBottom="@id/check_pwd"
        android:text="快速注册"
        android:textSize="@dimen/dp_14"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/btn_intent_activity"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignLeft="@id/view1"
        android:layout_alignRight="@id/view1"
        android:layout_below="@id/check_pwd"
        android:text="登录"
        android:textSize="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_50"
        android:textColor="#ff5f71"
        android:background="@drawable/shape"
        android:layout_marginBottom="@dimen/dp_120"
        />

</RelativeLayout>