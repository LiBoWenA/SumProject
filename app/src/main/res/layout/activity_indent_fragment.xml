<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.indentfragment_activity.IndentFragmentActivity">


    <com.example.tiamo.sumproject.view.indentview.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_50"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/baner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:layout_width="@dimen/dp_312"
                    android:layout_height="@dimen/dp_274">
                </android.support.v4.view.ViewPager>
                <TextView
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_24"
                    android:text="lalal"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#f00"
                android:textSize="20sp"
                android:text="999"
                android:id="@+id/details_price"
                android:layout_below="@id/baner"
                android:layout_marginTop="@dimen/dp_14"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/baner"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="0dp"
                android:text="lalal"
                android:textColor="#666"
                android:textSize="12sp" />

        </RelativeLayout>
    </com.example.tiamo.sumproject.view.indentview.CustomScrollView>
    <Button
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        />
</RelativeLayout>