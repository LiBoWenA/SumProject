<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingBottom="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70">

    <View
        android:id="@+id/viewl"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        />
    <RelativeLayout
        android:layout_toLeftOf="@id/views"
        android:layout_below="@id/viewl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_pop_name"
        android:text="lalalal"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/shop_pop_num"
        android:textColor="#fff"
        android:text="lallalal"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/shop_pop_addre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:text="lalal"
        android:layout_below="@id/shop_pop_name"
        />
    </RelativeLayout>
    <View
        android:id="@+id/views"
        android:layout_toLeftOf="@id/btn_check"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#fff"
        />
    <Button
        android:id="@+id/btn_check"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@null"
        android:textColor="#fff"
        />
</RelativeLayout>