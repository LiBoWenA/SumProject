<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/dp_20"
    >
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/circleshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/ciecle_head_photo"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            fresco:roundAsCircle="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_16"
            android:id="@+id/circle_head_name"
            android:text="小白牛"
            android:layout_toRightOf="@id/ciecle_head_photo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/circl_time"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="2018"
            android:textSize="10sp"
            android:layout_marginRight="@dimen/dp_10"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/circle_text"
        android:layout_margin="@dimen/dp_10"
        android:text="啦啦啦啦"
        android:textSize="12sp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:id="@+id/circle_img"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            >

        <ImageView
            android:id="@+id/btn_prise"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:button="@null"
            android:background="@mipmap/common_btn_prise_n"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/circlr_number"
            />

        <TextView
            android:id="@+id/circlr_number"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="421"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_24"
            />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>