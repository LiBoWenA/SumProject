<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_10"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/indentfragment_shape"
        android:paddingBottom="@dimen/dp_10"
        >
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text1"
                android:textSize="@dimen/sp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                />
            <TextView
                android:id="@+id/indent_waitindent_creat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:layout_toRightOf="@id/text1"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="12345"
                />
            <TextView
                android:text="订单时间"
                android:textSize="@dimen/sp_12"
                android:id="@+id/indent_waitindent_creat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/indent_waitindent_rv"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:id="@+id/pj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="派件公司"
                android:textSize="@dimen/sp_12"
                android:textColor="#666"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/send_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pj"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/expressage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pj"
                android:textSize="@dimen/sp_12"
                android:textColor="#666"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="快递单号"
                />
            <TextView
                android:id="@+id/odd_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/send_company"
                android:layout_toRightOf="@id/expressage"
                android:layout_alignBottom="@id/expressage"
                android:text="lallala"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:textColor="#666"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <Button
                android:id="@+id/shop_payprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="#ff5757"
                android:textColor="#fff"
                android:text="确认收货"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>