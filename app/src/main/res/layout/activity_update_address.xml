<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.myfragment_activity.UpdateAddressActivity">

    <TextView
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="wrap_content"
        android:text="修改收货地址"
        android:id="@+id/text"
        android:textColor="#666666"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        />
    <Button
        android:id="@+id/update_btn"
        android:text="确认修改"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_32"
        android:background="#ff5e70"
        android:textColor="#ffffff"
        android:layout_marginBottom="@dimen/dp_30"
        android:textSize="@dimen/sp_14" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_24"
        android:elevation="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/indentfragment_shape"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="收件人:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14" />
            <EditText
                android:id="@+id/update_name"
                android:background="#fff"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#cec8c8"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#666666"
                android:text="手机号码:"/>
            <EditText
                android:id="@+id/update_phone"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#cec8c8"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />
        <RelativeLayout
            android:id="@+id/rela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/te"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:layout_centerVertical="true"
                android:textColor="#666666"
                android:text="所在地区:"/>
            <TextView
                android:layout_toRightOf="@id/te"
                android:id="@+id/insert_address_region"
                android:background="#fff"
                android:layout_width="@dimen/dp_180"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666" />
            <Button
                android:id="@+id/but_city"
                android:background="@mipmap/common_btn_next_n"
                android:layout_toRightOf="@id/insert_address_region"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_15" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#cec8c8"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改地址:"/>
            <EditText
                android:id="@+id/update_address"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#cec8c8"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮政编码:"/>
            <EditText
                android:id="@+id/update_code"
                android:background="#fff"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666" />
        </LinearLayout>
        <View
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#cec8c8"
            android:layout_marginTop="@dimen/dp_10" />
    </LinearLayout>
</RelativeLayout>